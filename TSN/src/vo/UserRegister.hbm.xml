<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="vo.UserRegisterVO" table="User_Registration">
   
   	<id name="id" type="int" column="User_ID" >
   		<generator class="increment"/>
  	</id>

	<property name="firstname" type="string" column="firstname" />
	<property name="lastname" type="string" column="lastname" />
	<property name="email" type="string" column="email" />
	<property name="password" type="string" column="password" />
	<property name="salt" type="string" column="salt" />
	<property name="phone" type="string" column="phone" />
	<property name="designation" type="string" column="designation" />
	<property name="role" type="string" column="role" />
	<property name="homeaddress" type="string" column="Home_Address" />
	<property name="experience" type="string" column="Experience_Since" />
	<property name="companyname" type="string" column="Company_Name" />
	<property name="companyaddress" type="string" column="Company_Address" />
	<property name="country" type="string" column="Country" />
	 <property name="gender" type="string" column="Gender" />
	<!-- <property name="group" type="string" column="Group" /> -->
	<property name="website" type="string" column="Website_Name" /> 
	<property name="filePath" type="string" column="FilePath_Name" /> 
	
	 
	
	
	
</class>
</hibernate-mapping>
